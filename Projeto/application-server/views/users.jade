extends layout 

block content
  include navbar.jade
  .w3-container
    h1.w3-center Utilizadores existentes no sistema 

    .w3-row 
        .w3-half.w3-container
            if consumidores.length == 0
                p Não há utilizadores com o nível de consumidor!
            else 
                .w3-container(style='margin-top: 35px;')
                    h2 Consumidores
                    table.w3-text-black.w3-table-all.w3-hoverable.w3-centered.w3-large(style='margin-bottom: 50px;')
                        tr
                            th Username
                        each c in consumidores
                            tr
                                td= c.username
                                td
                                    a.w3-btn.w3-round-large.w3-teal(href='/users/editar?user='+c.username class="fas fa-pen")
                                td
                                    a.w3-btn.w3-round-large.w3-red(href='/users/eliminar/' + c.username class="fas fa-trash") 
        .w3-half.w3-container
            if produtores.length == 0
                p Não há utilizadores com o nível de produtor!
            else 
                .w3-container(style='margin-top: 35px;')
                    h2 Produtores
                    table.w3-text-black.w3-table-all.w3-hoverable.w3-centered.w3-large(style='margin-bottom: 50px;')
                        tr
                            th Username 
                        each p in produtores
                            tr
                                td= p.username
                                td
                                    a.w3-btn.w3-round-large.w3-teal(href='/users/editar?user=' + p.username class="fas fa-pen") 
                                td
                                    a.w3-btn.w3-round-large.w3-red(href='/users/eliminar?user=' + p.username class="fas fa-trash") 